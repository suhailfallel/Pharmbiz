@model IEnumerable<DAL.Model.Medicine>

@{
    ViewBag.Title = "ViewAddedMeds";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

<h2>View Added Medicines</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Batch_No)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medicine_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dosage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Medicine_Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_of_Mfg)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date_of_Exp)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stock_Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Batch_No)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Medicine_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dosage)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.Medicine_Image)*@
            <img src="@Url.Content(item.Medicine_Image)" height="100" width="100" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company_Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company_Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_of_Mfg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date_of_Exp)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stock_Status)
        </td>
        <td>
            @Html.ActionLink("Update", "UpdateMedicine", new { id=item.Id }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
        </td>
    </tr>
}

</table>
